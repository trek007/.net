
@model book.models.Campany
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Campany" : "New Campany";
}

<form method="post">
    <div class="row">
        <div class="col-12 ">
            <h2 class="text-primary border-bottom">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 ">
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="StreetAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="Postalcode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Postalcode" class="form-control" />
                    <span asp-validation-for="Postalcode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-4">
                    <label asp-for="IsAuthorizedCompany"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="IsAuthorizedCompany" class="text-danger" />
                </div>
            </div>
            <div class="form-group row p-2 m-3">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>


        </div>
    </div>
</form>
@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}


